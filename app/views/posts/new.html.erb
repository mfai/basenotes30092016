<h1>New Post</h1>

<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <br>
   <%= f.label :call_to_action %><br>
  <%= f.text_field :call_to_action %><br>
  <br> 
  <%= f.submit %>
<% end %>
